@model Estapar.Reservas.Models.Reserva

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            (@Html.DisplayFor(model => model.Usuario.Id)) - @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VeiculoId)
        </dt>
        <dd class="col-sm-10">
            (@Html.DisplayFor(model => model.VeiculoId)) - @Html.DisplayFor(model => model.Veiculo.Marca.Descricao) - @Html.DisplayFor(model => model.Veiculo.Modelo.Descricao) - @Html.DisplayFor(model => model.Veiculo.Placa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inativo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Inativo == false)
            {
                <img src="~/img/inativo.png" />
            }
            else
            {
                <img src="~/img/ativo.png" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Alterar</a> |
    <a asp-action="Index">Voltar a Lista</a>
</div>
